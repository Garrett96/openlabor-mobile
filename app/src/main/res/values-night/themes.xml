<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tempus" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/accent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/dark_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="cardBackgroundColor">@color/dark_card_background</item>
        <item name="android:textColorPrimary">@color/accent</item>
        <item name="android:textColorSecondary">@color/accent_dark</item>
        <item name="android:textColor">@color/accent</item>
    </style>
    
    <!-- Button styles for night mode -->
    <style name="Widget.Tempus.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/dark_surface</item>
        <item name="android:textColor">@color/accent</item>
        <item name="rippleColor">@color/accent_dark</item>
    </style>
    
    <style name="Widget.Tempus.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/accent</item>
        <item name="android:textColor">@color/accent</item>
        <item name="rippleColor">@color/accent_dark</item>
    </style>
    
    <!-- Dialog theme for night mode -->
    <style name="Theme.Tempus.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="android:background">@color/dark_card_background</item>
        <item name="android:textColorPrimary">@color/accent</item>
        <item name="android:textColorSecondary">@color/accent_dark</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Tempus.Button.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Tempus.Button.Dialog.Negative</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/accent</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="editTextStyle">@style/Widget.Tempus.EditText</item>
        <item name="editTextColor">@color/accent</item>
        <item name="android:editTextColor">@color/accent</item>
        <item name="android:textColorHint">@color/accent_dark</item>
        <item name="colorControlNormal">@color/accent_dark</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
    </style>
    
    <!-- Button styles for dialogs in night mode -->
    <style name="Widget.Tempus.Button.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent</item>
        <item name="rippleColor">@color/accent_dark</item>
        <item name="backgroundTint">@color/dark_surface</item>
        <item name="strokeColor">@color/accent</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <style name="Widget.Tempus.Button.Dialog.Negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent_dark</item>
        <item name="rippleColor">@color/accent</item>
        <item name="backgroundTint">@color/dark_surface</item>
        <item name="strokeColor">@color/accent_dark</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>