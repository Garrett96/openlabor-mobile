<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom AlertDialog style for dark mode -->
    <style name="Theme.Tempus.AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/dark_card_background</item>
        <item name="android:windowBackground">@color/dark_card_background</item>
        <item name="android:textColorPrimary">@color/accent</item>
        <item name="android:textColorSecondary">@color/accent_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Tempus.Button.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Tempus.Button.Dialog.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.Tempus.Button.Dialog.Negative</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/accent</item>
        <item name="android:colorBackground">@color/dark_card_background</item>
        <item name="android:colorBackgroundCacheHint">@color/dark_card_background</item>
        <item name="colorBackgroundFloating">@color/dark_card_background</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:listDivider">@color/accent</item>
        <item name="dividerColor">@color/accent</item>
    </style>
    
    <style name="Theme.Tempus.Dialog.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:background">@color/dark_card_background</item>
        <item name="android:windowBackground">@color/dark_card_background</item>
        <item name="colorSurface">@color/dark_card_background</item>
        <item name="colorOnSurface">@color/accent</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="colorOnPrimary">@color/dark_background</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent_dark</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="materialCalendarHeaderTitle">@style/Widget.Tempus.DatePicker.HeaderTitle</item>
        <item name="materialCalendarHeaderSelection">@style/Widget.Tempus.DatePicker.HeaderSelection</item>
        <item name="materialCalendarDay">@style/Widget.Tempus.DatePicker.Day</item>
    </style>
    
    <style name="Widget.Tempus.DatePicker.HeaderTitle" parent="Widget.MaterialComponents.MaterialCalendar.HeaderTitle">
        <item name="android:textColor">@color/accent</item>
    </style>
    
    <style name="Widget.Tempus.DatePicker.HeaderSelection" parent="Widget.MaterialComponents.MaterialCalendar.HeaderSelection">
        <item name="android:textColor">@color/accent</item>
    </style>
    
    <style name="Widget.Tempus.DatePicker.Day" parent="Widget.MaterialComponents.MaterialCalendar.Day">
        <item name="itemTextColor">@color/accent</item>
        <item name="itemTextAppearance">@style/TextAppearance.Tempus.DatePicker.Day</item>
    </style>
    
    <style name="TextAppearance.Tempus.DatePicker.Day" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/accent</item>
    </style>
    
    <!-- TimePicker styles for dark mode -->
    <style name="Theme.Tempus.Dialog.TimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="android:background">@color/dark_card_background</item>
        <item name="android:windowBackground">@color/dark_card_background</item>
        <item name="colorSurface">@color/dark_card_background</item>
        <item name="colorOnSurface">@color/accent</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="colorOnPrimary">@color/dark_background</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent_dark</item>
        <item name="chipBackgroundColor">@color/dark_surface</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Tempus.TimePicker</item>
    </style>
    
    <style name="ThemeOverlay.Tempus.TimePicker" parent="">
        <item name="colorPrimary">@color/accent</item>
        <item name="colorOnPrimary">@color/dark_background</item>
        <item name="colorSurface">@color/dark_card_background</item>
        <item name="colorOnSurface">@color/accent</item>
    </style>
</resources>