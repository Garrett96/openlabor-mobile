<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/text_entry_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        app:layout_constraintEnd_toStartOf="@+id/button_edit_entry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Jan 15, 2023" />

    <TextView
        android:id="@+id/text_clock_in_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/primary"
        app:layout_constraintEnd_toStartOf="@+id/text_clock_out_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_entry_date"
        tools:text="In: 9:00 AM" />

    <TextView
        android:id="@+id/text_clock_out_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/primary"
        app:layout_constraintEnd_toStartOf="@+id/button_edit_entry"
        app:layout_constraintStart_toEndOf="@+id/text_clock_in_time"
        app:layout_constraintTop_toTopOf="@+id/text_clock_in_time"
        tools:text="Out: 5:00 PM" />

    <TextView
        android:id="@+id/text_break_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/primary_light"
        app:layout_constraintEnd_toStartOf="@+id/button_edit_entry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_clock_in_time"
        tools:text="Break: 30 min" />

    <TextView
        android:id="@+id/text_hours_worked"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        app:layout_constraintEnd_toStartOf="@+id/button_edit_entry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_break_time"
        tools:text="Hours: 7.5" />

    <ImageButton
        android:id="@+id/button_edit_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Edit time entry"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_edit"
        app:tint="@color/primary" />

    <ImageButton
        android:id="@+id/button_delete_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Delete time entry"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_edit_entry"
        app:srcCompat="@android:drawable/ic_menu_delete"
        app:tint="@color/primary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/accent_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_hours_worked" />

</androidx.constraintlayout.widget.ConstraintLayout>